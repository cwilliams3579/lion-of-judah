<% content_for :title do %>Sign Up<% end %>
<br><br><br><br><br><br><br>
<div class="container-small">
  <div class="card" style="background: #000000; >
    <div class="card-block" style="background: #000000;">
      <div class="form-header">
        <h3  style="color: goldenrod;"> Sign Up</h3>
      </div>
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form'}) do |f| %>
        <%= devise_error_messages! %>
        <div class="md-form">
          <i class="fa fa-user prefix fa-fonts" ></i>
          <%= f.text_field :first_name, :autofocus => true, placeholder: "John", class: 'form-control'  %>
        </div>
        <div class="md-form">
          <i class="fa fa-user prefix fa-fonts"></i>
          <%= f.text_field :last_name, placeholder: "Doe", class: 'form-control md-gold-text' %>
        </div>
        <div class="md-form">
          <i class="fa fa-envelope prefix fa-fonts" style="color: goldenrod !important;"></i>
          <%= f.email_field :email, placeholder: "johndoe@gmail.com", class: 'form-control' %>
        </div>
        <div class="md-form">
          <i class="fa fa-lock prefix fa-fonts" ></i>
          <%= f.password_field :password, placeholder: "Create Password", class: 'form-control' %>
        </div>
        <div class="md-form">
          <i class="fa fa-lock prefix fa-fonts"></i>
          <%= f.password_field :password_confirmation, placeholder: "Repeat password", class: 'form-control'  %>
        </div>
        <div class="md-form center">
          <%= image_submit_tag("https://github.com/cwilliams3579/Choosen-uploads/blob/master/lion-logo.png?raw=true", class: " waves-effect waves-light btn-img", data: { disable_with: "<i class='fa fa-spinner fa-spin'></i>Processing..."}) %>
        </div>
      <% end %>
        <p class="white-text">Already have an account? <a href="/users/sign_in" class="gold-text">Sign In</a></p>
    </div>
  </div>
</div>
<br><br>








