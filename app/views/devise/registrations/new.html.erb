<% content_for :title do %>Sign Up<% end %>
<div class="container-small mt-2x">
  <div class="card purple-border-4x">
    <div class="card-block">
      <div class="form-header">
        <h4 class="h4-responsive indie-font goldenrod"> Sign Up </h4>
      </div>
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form'}) do |f| %>
        <p class="red-text">
          <%= devise_error_messages! %>
        </p>
        <div class="md-form">
          <i class="fas fa-user prefix fa-fonts" ></i>
          <%= f.text_field :first_name, :autofocus => true, placeholder: "John", class: 'form-control white-text'  %>
        </div>
        <div class="md-form">
          <i class="fa fa-user prefix fa-fonts"></i>
          <%= f.text_field :last_name, placeholder: "Doe", class: 'form-control white-text' %>
        </div>
        <div class="md-form">
          <i class="fa fa-envelope prefix fa-fonts"></i>
          <%= f.email_field :email, placeholder: "johndoe@gmail.com", class: 'form-control white-text' %>
        </div>
        <div class="md-form">
          <i class="fa fa-lock prefix fa-fonts" ></i>
          <%= f.password_field :password, placeholder: "Create Password", class: 'form-control white-text' %>
        </div>
        <div class="md-form">
          <i class="fa fa-lock prefix fa-fonts"></i>
          <%= f.password_field :password_confirmation, placeholder: "Repeat password", class: 'form-control white-text'  %>
        </div>
        <div class="mx-auto" style="width: 230px;">
          <%= image_submit_tag("https://github.com/cwilliams3579/Choosen-uploads/blob/master/lion-btn.png?raw=true", class: "waves-effect waves-light btn-img") %>
        </div>
      <% end %>
        <p class="white-text">Already have an account? <a href="/users/sign_in" class="white-text"><i class="fas fa-sign-in-alt goldenrod"></i> Sign In</a></p>
    </div>
  </div>
</div>
<br><br>








