<% content_for :title do %>Sign Up<% end %>
<br><br><br><br><br><br><br>
<div class="container-small">
  <div class="card" style="background: #000000; border: 4px solid goldenrod; padding:35px;">
    <div class="card-block" style="background: #000000;  background-image: url(https://github.com/cwilliams3579/Choosen-uploads/blob/master/lion-logo.png?raw=true); background-size: contain; background-position: center; background-repeat:no-repeat;">
      <div class="form-header" style="background-color: transparent !important; border: 2px solid goldenrod !important; color: goldenrod !important;">
        <h3  style="color: goldenrod;"> Sign Up</h3>
      </div>
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form'}) do |f| %>
        <%= devise_error_messages! %>
        <div class="md-form">
          <i class="fa fa-user prefix" style="color: goldenrod !important;"></i>
          <%= f.text_field :first_name, :autofocus => true, placeholder: "John", class: 'form-control', style: "color: goldenrod !important; font-size:18px;"  %>
        </div>
        <div class="md-form">
          <i class="fa fa-user prefix" style="color: goldenrod !important;"></i>
          <%= f.text_field :last_name, placeholder: "Doe", class: 'form-control md-gold-text', style: "color: goldenrod !important; font-size:18px;"  %>
        </div>
        <div class="md-form">
          <i class="fa fa-envelope prefix" style="color: goldenrod !important;"></i>
          <%= f.email_field :email, placeholder: "johndoe@gmail.com", class: 'form-control', style: "color: goldenrod !important; font-size:18px;"  %>
        </div>
        <div class="md-form">
          <i class="fa fa-lock prefix" style="color: goldenrod !important;"></i>
          <%= f.password_field :password, placeholder: "Create Password", class: 'form-control', style: "color: goldenrod !important; font-size:18px;" %>
        </div>
        <div class="md-form">
          <i class="fa fa-lock prefix" style="color: goldenrod !important;"></i>
          <%= f.password_field :password_confirmation, placeholder: "Repeat password", class: 'form-control', style: "color: #D5AD6D !important; font-size:18px;"  %>
        </div>
        <div class="md-form center">
          <%= f.button "", class: "fas fa-paw fa-3x waves-effect waves-light", style: "border: none; background-color: transparent !important;
color: goldenrod !important;",  data: { disable_with: "<i class='fa fa-spinner fa-spin'></i>Processing..."} %>
        </div>
      <% end %>
        <p class="white-text">Already have an account? <a href="/users/sign_in" class="gold-text">Sign In</a></p>
    </div>
  </div>
</div>
<br><br>








