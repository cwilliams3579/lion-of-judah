<div class="container mt mb">
    <!-- Section: Blog v.4 -->
<section class="my-5">

  <!-- Grid row -->
  <div class="row">

    <!-- Grid column -->
    <div class="col-md-12">

      <!-- Card -->
      <div class="card card-cascade wider reverse">
        <!-- Card image -->
        <div class="view view-cascade overlay">
          <%= image_tag(@post.image.url, class: "card-img-top") if @post.image? %>
          <a href="#!">
            <div class="mask rgba-white-slight"></div>
          </a>
        </div>

        <!-- Card content -->
        <div class="card-body card-body-cascade text-center purple-border-4x">

          <!-- Title -->
          <h2 class="font-weight-bold indie-font goldenrod"> <%= @post.title.titleize %> </h2>
          <!-- Data -->
          <p class="grey-text">Written by <a><strong class="purple-text"><%= @post.user.full_name.titleize %></strong></a>, <%= @post.created_at.strftime("%m/%d/%Y") %></p>
          <!-- Social shares -->
          <div class="social-counters">
            <!-- Comments -->
            <a >
              <i class="fas fa-comment pr-2 goldenrod"></i>
              <span class="clearfix d-none d-md-inline-block indie-font"><%= pluralize(@post.comments.count, 'Comment') %></span>
            </a>
            <!-- Comments -->
          </div>
          <!-- Social shares -->

        </div>
        <!-- Card content -->

      </div>
      <!-- Card -->

      <!-- Excerpt -->
      <div class="mt-5">
        <p>
            <%= @post.description %>
        </p>
      </div>
 
      <h3 class="h3-responsive indie-font goldenrod text-center">Add a comment</h3>
      
      <%= render 'comments/form'  %>
      
      <div id="messages">
        <% if @post.comments != 0 %>
          <%= render partial: 'comments/comments', object: @comments  %>
        <% else %>
          <h3 class="h3-responsive goldenrod text-center">No Comments Yet! </h3>
        <% end %>
        
        <div class="center">
          <%= will_paginate(@comments, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer, class: 'justify-content-center') %>
        </div>
      </div>
      
    </div>
    <!-- Grid column -->

  </div>
  <!-- Grid row -->

</section>
<!-- Section: Blog v.4 -->
</div>