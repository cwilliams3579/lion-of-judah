<div class="row">
  
  <div class="col-md-6 mt-2x">
    <!-- Projects section v.3 -->
  <section class="my-5">
  
    <!-- Section heading -->
    <h2 class="h1-responsive font-weight-bold text-center my-5 indie-font goldenrod"><%= @book.title %></h2>
    <!-- Section description -->
  
    <!-- Grid row -->
    <div class="row">
  
      <!-- Grid column -->
      <div class="col-lg-5 mb-lg-0 mb-5">
        <!--Image-->
        <%= image_tag(@book.image.url, class: "img-fluid rounded z-depth-1", alt: "Sample project image") %> 
        <div class="star-rating" data-turbolinks="false" data-score= <%= @avg_rating %> ></div> <br>
        <p><%= "#{@reviews.length} reviews" %></p>
        <div class="btn-group">
          <%= link_to  book_likes_path(@book, like: "like", method: :post) do %>
            <span id="dislike"><i class="fa fa-thumbs-up goldenrod ml-3"></i></span>
          <% end %> &nbsp;
                
          <%= link_to book_likes_path(@book, like: "dislike", method: :post) do %>
            <span id="dislike"><i class="fa fa-thumbs-down goldenrod ml-3"></i></span>
          <% end %>
        </div>
      </div>
      <!-- Grid column -->
  
      <!-- Grid column -->
      <div class="col-lg-7">
  
        <!-- Grid row -->
        <div class="row mb-3">
          <div class="col-md-1 col-2">
            <i class="fa fa-book fa-2x goldenrod"></i>
          </div>
          <div class="col-md-11 col-10">
            <h5 class="font-weight-bold mb-3"> <%= link_to Category.find(@book.category_id).name, category_path(@book.category_id), class: "purple-text indie-font" %> </h5>
            <small class="font-weight-bold mb-3">Written by <%= @book.user.full_name.titleize  %></small>
            <p class="grey-text"><%= @book.description %></p>
            
            <% if current_user && (current_user.admin?) %>
              <%= link_to '', edit_book_path(@book), class: "fas fa-pencil-alt fa-lg goldenrod", toggle: "tooltip", placement: "top", title:"Edit" %> &nbsp;
              <%= link_to '', @book, class: "fa fa-trash text-danger", toggle: "tooltip", placement: "top", title:"Delete", onclick:"loadContent(1)", :method => :delete, :data => {:confirm => "You Sure?"} %> &nbsp;
            <% else %>
              <%= link_to '', new_book_review_path(@book), class: "fas fa-pencil-alt fa-lg goldenrod", toggle: "tooltip", placement: "top", title:"Write A Review!" %> &nbsp;
            <% end %>
              <%= link_to '', books_path, class: "fas fa-undo-alt goldenrod", toggle: "tooltip", placement: "top", title:"Back" %>
          </div>
        </div>
        <!-- Grid row -->
      </div>
      <!-- Grid column -->
    </div>
    <!-- Grid row -->
  </section>
  <!-- Projects section v.3 -->
  
  </div>
  
<!-- Section: Testimonials v.2 -->
<section class="text-center col-md-6 mt-2x">
<% if @reviews.blank? %>
  <!-- Section heading -->
  <h4 class="h4-responsive font-weight-bold my-5 grey-text">No reviews yet. Be the first to write one!</h4>
  <%= link_to '', new_book_review_path(@book), class: "fas fa-pencil-alt fa-lg goldenrod" %>
<% else %>
  <h4 class="h4-responsive font-weight-bold my-5 indie-font goldenrod">Reviews</h4>
 <!-- Carousel Wrapper -->
  <div id="carousel-example-1" class="carousel no-flex testimonial-carousel slide carousel-fade" data-ride="carousel" data-interval="false">
    <!--Slides-->
    <div class="carousel-inner" role="listbox">
      <% @reviews.each do |review| %>
      <!--First slide-->
      <div class=" active">
        <div class="testimonial">
          <!--Content-->
          <div class="star-rating" data-turbolinks="false" data-score= <%= review.rating %> ></div>
          <p class="purple-text">
            <%= "#{review.user.first_name.capitalize} #{review.user.last_name.capitalize[0]}." %>
            <%= review.created_at.strftime("%-m/%-d/%Y") %>
          </p>
          <p class="grey-text">
            <i class="fa fa-quote-left"></i> <%= h(review.comment).gsub(/\n/, '<br/>').html_safe %> <i class="fa fa-quote-right"></i>
          </p>
          <% if user_signed_in? %>
            <% if (review.user == current_user) || (current_user.admin?) %>
              <%= link_to "", edit_book_review_path(@book, review), class: "fas fa-edit goldenrod" %> &nbsp;
              <%= link_to " ", book_review_path(@book, review), toggle: "tooltip", placement: "top", title:"Delete", onclick:"loadContent(1)", :method => :delete, :data => {:confirm => "You Sure?"}, class: "fas fa-trash text-danger" %>
            <% end %>
          <% end %>
          <!--Review-->
         <hr class="my-5">
        </div>
      </div>
      <!--First slide-->
    <% end %>
    </div>
    <!--Slides-->
 
  </div>
  <!-- Carousel Wrapper -->
<% end %>
 

</section>
<!-- Section: Testimonials v.2 -->
  
</div>

<script type="text/javascript">
  $('.star-rating').raty({
    path: 'https://s3.amazonaws.com/yelp-clone-rails/stars',
    readOnly: true,
    score: function() {
      return $(this).attr('data-score')
    }
  });
</script>