<div class="container mt-2x mb">
    <!-- Section: Products v.1 -->
  <section class="text-center my-5">
  
    <!-- Section heading -->
    <h2 class="h1-responsive font-weight-bold text-center title-font my-5">Our bestsellers</h2>
    <!-- Section description -->

    <!-- Grid row -->
    <div class="row">
      <!-- Grid column -->
      <% @books.each do |book| %>
      <div class="col-lg-3 col-md-6 mb-lg-0 mb-4">
        <!-- Card -->
        <div class="card card-cascade narrower card-ecommerce">
          <!-- Card image -->
          <div class="view view-cascade overlay">
            <!-- <img src="https://www.rastaseed.com/wp-content/uploads/2008/03/lion-of-judah-poster.jpg" class="card-img-top" alt="sample photo"> -->
            <%= image_tag book.image.url, class: "card-img-top", alt: "sample photo", style: "width:198px; height: 297px;" %>
            <a>
              <div class="mask rgba-white-slight"></div>
            </a>
          </div>
          <!-- Card image -->
          <!-- Card content -->
          <div class="card-body card-body-cascade text-center">
            <!-- Category & Title -->
             
              <h5 class="h5-responsive"><%= link_to Category.find(book.category_id).name, category_path(book.category_id), class: "purple-text" %></h5>
        
            <h4 class="card-title gold-text">
              <strong>
                <%= link_to book.title, book_path(book), style:"font-family: 'UnifrakturCook', cursive !important; color:goldenrod;" %>
              </strong>
            </h4>
            <!--Rating-->
            <ul class="rating">
              <li>
                <div class="star-rating" data-turbolinks="false" data-score= <%= review.rating %> ></div>
              </li>
            </ul>
            <!-- Description -->
            <p class="card-text">
              <%= truncate(book.description, length: 150) %>
            </p>
            <!-- Card footer -->
            <div class="card-footer px-1">
              
              <span class="center">
                <a data-toggle="tooltip" data-placement="top" title="See More">
                  <i class="fas fa-eye grey-text ml-3"></i>
                </a>
                <a data-toggle="tooltip" data-placement="top" title="Like">
                  <i class="fas fa-thumbs-up grey-text ml-3"></i>
                </a>
                <a data-toggle="tooltip" data-placement="top" title="Dislike">
                  <i class="fas fa-thumbs-down grey-text ml-3"></i>
                </a>
                <a data-toggle="tooltip" data-placement="top" title="Add to Cart">
                  <i class="fa fa-shopping-cart grey-text ml-3"></i>
                </a>
                <% if current_user && (current_user.admin?) %>
                   &nbsp;
                  <%= link_to '', edit_book_path(book), class: "fa fa-pencil gold-text", toggle: "tooltip", placement: "top", title:"Edit" %>
  
                  &nbsp;
                <%= link_to '', book, class: "fa fa-trash active",toggle: "tooltip", placement: "top", title:"Destroy", onclick:"loadContent(1)", method: :delete, data: { confirm: 'Are you sure?' } %>
              <% end %>  
              </span>
            </div>
          </div>
          <!-- Card content -->
        </div>
        <!-- Card -->
      </div>
      <!-- Grid column -->
  
      <% end %>
    </div>
    <!-- Grid row -->
  </section>
  <!-- Section: Products v.1 -->
  <br>

  <div class="center">
    <%= link_to '', new_book_path, class: "fas fa-book fa-2x goldenrod" %>
  </div>
</div>


<script type="text/javascript">
  $('.star-rating').raty({
    path: 'https://s3.amazonaws.com/yelp-clone-rails/stars',
    readOnly: true,
    score: function() {
      return $(this).attr('data-score')
    }
  });
</script>