<p id="notice"><%= notice %></p>

<div class="container mt">
  <!-- Section: Products v.1 -->
<section class="text-center my-5">

  <!-- Section heading -->
  <h2 class="h1-responsive font-weight-bold text-center my-5 gold-text">Our bestsellers</h2>
  <!-- Section description -->
  <p class="grey-text text-center w-responsive mx-auto mb-5">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Fugit, error amet numquam iure provident voluptate esse quasi, veritatis totam voluptas nostrum quisquam eum porro a pariatur veniam.</p>

  <!-- Grid row -->
  <div class="row">
    <% @books.each do |book| %>
    <!-- Grid column -->
    <div class="col-lg-3 col-md-6 mb-lg-0 mb-4">
      <!-- Card -->
      <div class="card card-cascade narrower card-ecommerce">
        <!-- Card image -->
        <div class="view view-cascade overlay">
          <!-- <img src="https://www.rastaseed.com/wp-content/uploads/2008/03/lion-of-judah-poster.jpg" class="card-img-top" alt="sample photo"> -->
          <%= image_tag book.image.url, class: "card-img-top", alt: "sample photo", style: "width:198px; height: 297px;" %>
          <a>
            <div class="mask rgba-white-slight"></div>
          </a>
        </div>
        <!-- Card image -->
        <!-- Card content -->
        <div class="card-body card-body-cascade text-center">
          <!-- Category & Title -->

          <h4 class="card-title">
            <strong>
              <%= link_to book.title, book_path(book) %>
            </strong>
          </h4>
          <!--Rating-->
          <ul class="rating">
            <li>
              <i class="fa fa-star"></i>
            </li>
            <li>
              <i class="fa fa-star"></i>
            </li>
            <li>
              <i class="fa fa-star"></i>
            </li>
            <li>
              <i class="fa fa-star"></i>
            </li>
            <li>
              <i class="fa fa-star-o"></i>
            </li>
          </ul>
          <!-- Description -->
          <p class="card-text">
            <%= truncate(book.description, length: 200) %>
          </p>
          <!-- Card footer -->
          <div class="card-footer px-1">
            <span class="float-left font-weight-bold">
              <strong>$49</strong>
            </span>
            <span class="float-right">
              <a data-toggle="tooltip" data-placement="top" title="Add to Cart">
                <i class="fa fa-shopping-cart grey-text ml-3"></i>
              </a>
              <a data-toggle="tooltip" data-placement="top" title="Share">
                <i class="fa fa-share-alt grey-text ml-3"></i>
              </a>
              <a class="active" data-toggle="tooltip" data-placement="top" title="Added to Wishlist">
                <i class="fa fa-heart ml-3"></i>
              </a> &nbsp;&nbsp;
                <%= link_to '', edit_book_path(book), class: "fa fa-pencil gold-text", toggle: "tooltip", placement: "top", title:"Edit" %>

              &nbsp;&nbsp;
              <%= link_to '', book, class: "fa fa-trash active",toggle: "tooltip", placement: "top", title:"Destroy", method: :delete, data: { confirm: 'Are you sure?' } %>
            </span>
          </div>
        </div>
        <!-- Card content -->
      </div>
      <!-- Card -->
    </div>
    <!-- Grid column -->

  </div>
  <!-- Grid row -->
<% end %>
</section>
<!-- Section: Products v.1 -->
</div>




<br>

<div class="center">
  <%= link_to '', new_book_path, class: "fas fa-book fa-2x gold-text" %>
</div>
