<div class="container mt-2x mb">
<!-- Editable table -->
<div class="card">
    <h3 class="card-header text-center font-weight-bold text-uppercase indie-font py-4">Categories</h3>
    <div class="card-body">
        <div id="table" class="table-editable">
            <span class="table-add float-right mb-3 mr-2"><a href="/categories/new" class="text-success"><i class="fa fa-plus fa-2x" aria-hidden="true"></i></a></span>
            <table class="table table-bordered table-responsive-md table-striped text-center">
                <tr>
                    <th class="text-center">Category</th>
                    <th class="text-center">Books</th>
                    <th class="text-center">Actions</th>
                </tr>
              <% @categories.each do |category| %>
                <tr>
                    <td class="pt-3-half" contenteditable="true"><%= category.name %></td>
                    
                    <td class="pt-3-half">
                        <span class="table-up"><a href="#!" class="indigo-text">Lion Of Judah</span>
                        <!--<span class="table-down"><a href="#!" class="indigo-text"><i class="fa fa-long-arrow-down" aria-hidden="true"></i></a></span>-->
                    </td>
                    <td>
                        <span class="table-remove"> <%= link_to '', category, class: "fa fa-eye goldenrod" %></span>
                        <span class="table-remove"><%= link_to '', edit_category_path(category), class: "fa fa-pencil goldenrod" %></span>
                         <span class="table-remove"><%= link_to '', category, class: "fa fa-trash text-danger", method: :delete, data: { confirm: 'Are you sure?' } %></span>
                    </td>
                </tr>
                <!-- This is our clonable table line -->

              <% end %>
            </table>
        </div>
    </div>
</div>
<!-- Editable table -->


<br>

<div class="mx-auto mt">
  <%= link_to '', new_category_path, class: "fa fa-tag fa-2x goldenrod" %>
</div>

</div>